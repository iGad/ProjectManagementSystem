<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Resource.EnterLogin.</title>
    @Styles.Render("~/Content/reset")
    @Styles.Render("~/Content/angular-material")
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/login")
</head>
<body>
    <div ng-app="authapp" ng-controller="authController" id="form-logon">
        <md-content layout="row" layout-align="center center" ng-cloak class="login-form">
            <md-card flex="flex" flex-gt-sm="50" flex-gt-md="33">
                <md-toolbar>
                    <div class="md-toolbar-tools">
                        <h2><span>@Resource.LoginSystem</span></h2>
                    </div>
                </md-toolbar>
                <md-card-content>
                    <form name="Form">
                        <label>@Resource.Login</label>
                        <md-input-container class="md-block">
                            <input type="text" name="login" ng-model="email" required aria-label="login" />
                            <div ng-messages="Form.login.$error" role="alert" multiple="">
                                <div ng-message="required">@Resource.EnterLogin.</div>
                            </div>
                        </md-input-container>
                        <label>@Resource.Password</label>
                        <md-input-container class="md-block">
                            <input type="password" name="password" ng-model="password" required aria-label="password" />
                            <div ng-messages="Form.password.$error" role="alert" multiple="">
                                <div ng-message="required">@Resource.EnterPassword.</div>
                            </div>
                        </md-input-container>
                        <div layout="row" layout-align="space-between center">
                            <span><md-checkbox ng-model="rememberMe">@Resource.Remember</md-checkbox></span>
                            <md-button type="submit" ng-click="logOn()" class="md-raised md-primary">&nbsp @Resource.LoginEnterButton &nbsp</md-button>
                        </div>
                        <div ng-bind="errorResult" ng-if="errorResult" style="color:red;">
                        </div>
                        @if (ViewBag.AccountAlreadyUsed != null)
                        {
                            <div style="color:red;">
                                @ViewBag.AccountAlreadyUsed
                            </div>
                        }
                    </form>
                </md-card-content>
            </md-card>
        </md-content>
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    @*
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
</body>
</html>




